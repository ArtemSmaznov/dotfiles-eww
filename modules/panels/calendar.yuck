(defwindow calendar-window
           :monitor 0
           :geometry (geometry :x "10px"
                               :y "10px"
                               :anchor "top right")
           :windowtype "dialog"
           :stacking "fg"
           :wm-ignore true
           (calendar :show-details true
                     :show-heading true
                     :show-day-names true
                     :show-week-numbers false))
