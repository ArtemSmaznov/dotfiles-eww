(defwidget bar-player []
           (box :class "widget player"
                :orientation "h"
                :space-evenly false
                :spacing { status-bar-icon-spacing * 2 }
                :halign "center"

                (bar-player-name)
                (bar-player-status)
                (bar-player-track-info)
                (bar-player-flags)
                (bar-player-volume)))

(defwidget bar-player-name []
           (label :class "player-name"
                  :text player-name))

(defwidget bar-player-status []
           (label :class "icon state ${
                music-state == 'stopped' ? 'blue'   :
                music-state == 'playing' ? 'green'  :
                music-state == 'paused'  ? 'yellow' :
                                            'red'    }"
                  :text { music-state == "stopped" ? "stop" :
                          music-state == "playing" ? "play" :
                                                      "pause" }))

(defwidget bar-player-track-info []
           (box :class "track-info"
                :orientation "h"
                :space-evenly false
                :spacing 6

                (revealer
                 :transition "slideright"
                 :duration revealer-duration
                 :reveal { music-artist != "" }
                 (box :orientation "h"
                      :space-evenly false
                      :spacing 6
                      (label :class "artist"
                             :limit-width 50
                             :text music-artist)
                      (label :class "separator"
                             :text "Â·")))

                (label :class "title"
                       :limit-width 50
                       :text music-title)))

(defwidget bar-player-flags []
           (box :class "playback-info"
                :orientation "h"
                :space-evenly false
                :spacing status-bar-icon-spacing

                (revealer
                 :transition "slideright"
                 :duration revealer-duration
                 :reveal { player-name == "mpd" }
                 (box :orientation "h"
                      :space-evenly false
                      :spacing status-bar-icon-spacing

                      (label :class "music-flags"
                             :text music-flags)))))

(defwidget bar-player-volume []
           (box :class "volume"
                :orientation "h"
                :space-evenly false
                :spacing 6

                (label :class "icon"
                       :text { music-volume ==   0 ? "volume-off"  :
                               music-volume <= 0.5 ? "volume-low"  :
                                                     "volume-high" })
                (label :text "${ replace(round(music-volume, 2), '0.', '') }%")))
